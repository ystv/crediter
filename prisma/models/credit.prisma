enum CreditProgress {
  STARTED
  BROWSER_LAUNCHED
  IMAGE_SAVED
  SCROLL_GENERATED
  ENDCARD_ADDED
  UPLOADED
  TIDIED
}

enum CreditState {
  WAITING
  GENERATING
  READY
  FAILED
  OUTDATED
  DELETED
}

model Credit {
  id                       String  @id @default(cuid())

  state CreditState @default(WAITING)
  progress CreditProgress @default(STARTED)

  path String?
  size Int @default(-1)

  event_id String
  event Event @relation(fields: [event_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt()

  @@map("credits")
}